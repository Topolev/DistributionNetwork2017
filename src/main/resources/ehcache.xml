<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.distributionnetwork.app.domain.User" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Authority" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.JUser" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.JUser.publications" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Publication" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Publication.labels" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Publication.subCategories" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Category" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Category.subCategories" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.SubCategory" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.SubCategory.publications" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Label" uses-template="simple"/>

    <cache alias="com.distributionnetwork.app.domain.Label.publications" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
